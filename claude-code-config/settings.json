{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run :*)",
      "Bash(git :*)",
      "Bash(pnpm :*)",
      "Bash(gh :*)",
      "Bash(cd :*)",
      "Bash(ls :*)",
      "Bash(node :*)",
      "Bash(pnpm:*)",
      "Bash(gh:*)",
      "Edit",
      "Bash(ls:*)",
      "Bash(git:*)",
      "mcp__context7",
      "mcp__exa",
      "Bash(claude mcp add:*)",
      "Bash(pnpm ts:*)",
      "Bash(mkdir:*)",
      "WebFetch(domain:upstash.com)",
      "Bash(npx prisma migrate dev:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm test:*)",
      "Bash(rm:*)",
      "Bash(claude mcp:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(pnpm lint:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "mcp__exa__get_code_context_exa"
    ],
    "deny": [],
    "defaultMode": "bypassPermissions"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun /Users/melvynx/.claude/scripts/command-validator/src/cli.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 /Users/melvynx/.claude/song/finish.mp3"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 /Users/melvynx/.claude/song/need-human.mp3"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun /Users/melvynx/.claude/scripts/statusline/src/index.ts",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "mgrep@Mixedbread-Grep": false
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true
}
